<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/black_number_image_view"
        android:layout_width="60dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_height="60dp"
        android:background="@drawable/black_roll_button_selector"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/black_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="25sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/black_number_mode_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/black_number_text"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/black"
        android:textSize="25sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/black_number_mode_text"/>


</RelativeLayout>