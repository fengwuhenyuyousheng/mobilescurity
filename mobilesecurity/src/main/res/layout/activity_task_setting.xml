<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:padding="10dp"
        android:text="设置中心"
        android:textSize="25sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.test.yang.mobilesecurity.ui.SettingOptionsItem
                android:id="@+id/show_system_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                itheima:set_description_off="隐藏系统进程"
                itheima:set_description_on="显示系统进程"
                itheima:set_title="显示系统进程" />

            <com.test.yang.mobilesecurity.ui.SettingOptionsItem
                android:id="@+id/lock_screen_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                itheima:set_description_off="桌面控件锁屏不清理进程"
                itheima:set_description_on="桌面控件锁屏清理进程"
                itheima:set_title="桌面控件锁屏清理进程" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
